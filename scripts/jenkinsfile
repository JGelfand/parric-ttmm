pipeline {
    agent {
        label 'slave'
    }

    stages {
        stage('build') {
            steps {
                sh 'make --directory=ttmm all'
            }
        }
	stage('test') {
            steps {
                sh './tests/test0.sh'
                sh './tests/test1.sh'
                sh './tests/test2.sh'
            }
        }
        stage('cleanup') {
            steps {
                sh 'make --directory=ttmm clean'
            }
        }
    }


}
